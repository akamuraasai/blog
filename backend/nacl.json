[
  {
    "group": "admin",
    "permissions": [
      {
        "resource": "users/*",
        "methods": ["POST", "GET", "PUT", "DELETE"],
        "action": "allow"
      }
    ]
  },
  {
    "group": "user",
    "permissions": [
      {
        "resource": "users/:id",
        "methods": ["GET", "PUT", "DELETE"],
        "action": "allow"
      },
      {
        "resource": "users/*",
        "methods": ["POST", "GET", "PUT", "DELETE"],
        "action": "deny"
      }
    ]
  },
  {
    "group": "anonymous",
    "permissions": [
      {
        "resource": "login",
        "methods": ["POST"],
        "action": "allow"
      },
      {
        "resource": "register",
        "methods": ["POST"],
        "action": "allow"
      },
      {
        "resource": "users/*",
        "methods": ["POST", "GET", "PUT", "DELETE"],
        "action": "deny"
      }
    ]
  }
]
